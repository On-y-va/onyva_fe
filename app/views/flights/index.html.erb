<div id="button" align="right">
  <div class='btn-group'>
    <%= button_to "Trip Details", trip_path(@trip_id), method: :get, local: true, class:"button btn-outline-info btn-sm" %>
  </div>
</div>
<center>
<div id="logo" align="center">
  <img src="https://raw.githubusercontent.com/On-y-va/onyva_fe/main/src/assets/onyva_logo.png" class="img-fluid" alt="onyva logo" width="400" height="auto" />
</div>
</center>
<center>
<div class="title_name" id="flight_header">
  <h3> Group Flight Information </h3>
</center>
<div id="table" >
<div class="font-class">
  <table class="table">
    <thead class="table-secondary">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Flight Number</th>
        <th scope="col">Date</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
    <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <div id="flight_<%= flight.flight_id %>">
          <td><%= flight.user_name %></td>
          <td><%= flight.flight_number %></td>
          <td><%= flight.date.slice!(0..9) %></td>
          <td><%= flight.status %></td>
          <td>
        </div>
          <div id="button">
            <div class='btn-group'>
              <%= button_to "Update", edit_trip_flight_path(@trip_id, flight.flight_id), method: :get, local: true, class:"button btn-outline-info btn-sm" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= button_to "Delete", trip_flight_path(@trip_id, flight.flight_id), method: :delete, local: true, class:"button btn-outline-info btn-sm" %>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>