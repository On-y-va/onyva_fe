<div id="button" align="right">
  <div class='btn-group'>
    <%= button_to "Create Trip", new_trip_path, method: :get, local: true, class:"btn button btn-sm" %>&nbsp;&nbsp;&nbsp;
    <%= button_to "Edit Profile", edit_user_path(@user.id), method: :get, local: true, class:"btn button btn-sm" %>&nbsp;&nbsp;&nbsp;
    <%= button_to "Delete #{@user.first_name}", user_path(@user.id), method: :delete, local: true, class:"btn button-danger btn-sm" %><br/><br/><br/><br/>
  </div>
</div>
<div id="logo" align="left">
  <img src="https://raw.githubusercontent.com/On-y-va/onyva_fe/main/src/assets/onyva_logo.png" class="img-fluid" alt="onyva logo" width="200" height="200" />
</div>
<center>
<div id="user_name">
  <p><h3>Welcome <%= @user.first_name %> <%= @user.last_name %></h3></p>
</div>
  <div id="econtact">
    <p>Emergency Contact:</p>
    <p><%= @user.emergency_contact_name %></p>
    <p><%= @user.emergency_contact_phone_number %></p>
  </div>
  <div class="bg p-1 rounded-lg m-5">
    <h4> Upcoming Trips </h4><br/><br/><br/><br/>
    <% @upcoming_trips.each do |trip| %>
      <p><b><%= trip.name %> <%= button_to "Remove", "/api/v1/users/#{@user.id}/trips/#{trip.trip_id}/delete", method: :get %></p></b>
      <p><%= trip.start_date %> - <%= trip.end_date %></p>
      <p><%= trip.city %>, <%= trip.country %></p>
      <p><img src=<%= "#{trip.image_url}" %> class="img-fluid" alt="moon" width="50" height="50" />
    <% end %>
  </div>
  <div class="bg p-1 rounded-lg m-5">
    <h4> Pending Trips </h4><br/><br/><br/><br/>
    <% @pending_trips.each do |trip| %>
      <p><b><%= trip.name %> <%= button_to "Accept", "/api/v1/users/#{@user.id}/trips/#{trip.trip_id}", method: :get %> <%= button_to "Decline", "/api/v1/users/#{@user.id}/trips/#{trip.trip_id}/delete", method: :get %></p></b>
      <p><%= trip.start_date %> - <%= trip.end_date %></p>
      <p><%= trip.city %>, <%= trip.country %></p>
      <p><img src=<%= "#{trip.image_url}" %> class="img-fluid" alt="moon" width="50" height="50" />
    <% end %>
  </div>
</center>
